{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 200,
  "title": {
    "text": "Temperature Anomaly and Fire Incidents Comparison (Australia)",
    "subtitle": "Temperature deviation from long-term average (°C) vs Fire Incidents (2017-2021)",
    "fontSize": 16,
    "subtitleFontSize": 12
  },
  "data": {
    "url": "data/20210908_cli_001_graph-forplot.csv"
  },
  "transform": [
    {
      "filter": "datum.Temperature != null && datum.Temperature != 'NaN'"
    },
    {
        "filter": "datum.Year > 2016"
    }
  ],
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Temperature Anomaly'",
          "as": "category"
        }
      ],
      "mark": {
        "type": "line",
        "point": true,
        "strokeWidth": 3
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "title": "Year",
          "axis": {
            "labelAngle": 0
          }
        },
        "y": {
          "field": "Temperature",
          "type": "quantitative",
          "title": "Temperature Anomaly (°C)",
          "scale": {
            "domain": [0,2]
          }
        },
        "color": {
          "field": "category",
          "type": "nominal",
          "scale": {
            "domain": ["Temperature Anomaly", "Fire Incidents"],
            "range": ["#CC79A7", "#0072B2"]
          },
          "legend": {
            "orient": "top-left",
            "offset": 10,
            "padding": 10,
            "title": "Data Type"
          }
        },
        "tooltip": [
          {
            "field": "Year",
            "type": "ordinal",
            "title": "Year"
          },
          {
            "field": "Temperature",
            "type": "quantitative",
            "format": ".2f",
            "title": "Temperature Anomaly (°C)"
          }
        ]
      }
    },
    {
      "data": {
        "url": "data/Fire_For16-21_Attributes.csv"
      },
      "transform": [
        {
          "filter": "datum.FOR_CATEGO == 'Native forest' && datum.STATE != '' && datum.STATE != null"
        },
        {
          "fold": [
            "FIRE_1617",
            "FIRE_1718",
            "FIRE_1819", 
            "FIRE_1920",
            "FIRE_2021"
          ],
          "as": ["YearColumn", "FireStatus"]
        },
        {
          "filter": "datum.FireStatus == 'U'"
        },
        {
          "calculate": "datum.YearColumn == 'FIRE_1617' ? '2017' : datum.YearColumn == 'FIRE_1718' ? '2018' : datum.YearColumn == 'FIRE_1819' ? '2019' : datum.YearColumn == 'FIRE_1920' ? '2020' : '2021'",
          "as": "Year"
        },
        {
          "aggregate": [
            { "op": "count", "as": "FireIncidents" }
          ],
          "groupby": ["Year"]
        },
        {
          "calculate": "'Fire Incidents'",
          "as": "category"
        }
      ],
      "mark": {
        "type": "line",
        "point": true,
        "strokeWidth": 3,
        "interpolate": "monotone"
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "axis": {
            "labelAngle": 0
          }
        },
        "y": {
          "field": "FireIncidents",
          "type": "quantitative",
          "title": "Fire Incidents",
          "scale": {
            "domain": [0, 15000]
          },
          "axis": {
            "orient": "right"
          }
        },
        "color": {
          "field": "category",
          "type": "nominal",
          "scale": {
            "domain": ["Temperature Anomaly", "Fire Incidents"],
            "range": ["#CC79A7", "#0072B2"]
          }
        },
        "tooltip": [
          {
            "field": "Year",
            "type": "ordinal",
            "title": "Year"
          },
          {
            "field": "FireIncidents",
            "type": "quantitative",
            "format": ",",
            "title": "Fire Incidents"
          }
        ]
      }
    }
  ],
  "resolve": {
    "scale": {
      "x": "shared",
      "y": "independent"
    }
  }
}