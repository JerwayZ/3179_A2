{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 400,
  "title": "Planned vs Unplanned Fire Incidents Distribution",
  "data": {
    "url": "data/Fire_For16-21_Attributes.csv"
  },
  "params": [
    {
      "name": "state_filter",
      "value": "All States",
      "bind": {
        "input": "select",
        "options": ["All States", "NSW", "Vic", "Qld", "WA", "SA", "Tas", "NT", "ACT"],
        "name": "Select State: "
      }
    },
    {
      "name": "year_filter",
      "value": "All Years",
      "bind": {
        "input": "select",
        "options": ["All Years", "2016-17", "2017-18", "2018-19", "2019-20", "2020-21"],
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.STATE != '' && datum.STATE != null && datum.STATE != ' '"
    },
    {
      "fold": ["FIRE_1617", "FIRE_1718", "FIRE_1819", "FIRE_1920", "FIRE_2021"],
      "as": ["Year", "FireType"]
    },
    {
      "calculate": "datum.Year == 'FIRE_1617' ? '2016-17' : datum.Year == 'FIRE_1718' ? '2017-18' : datum.Year == 'FIRE_1819' ? '2018-19' : datum.Year == 'FIRE_1920' ? '2019-20' : '2020-21'",
      "as": "YearLabel"
    },
    {
      "filter": "datum.FireType == 'U' || datum.FireType == 'P'"
    },
    {
      "calculate": "datum.FireType == 'U' ? 'Unplanned' : 'Planned'",
      "as": "FireCategory"
    },
    {
      "filter": "year_filter == 'All Years' || datum.YearLabel == year_filter"
    },
    {
      "filter": "state_filter == 'All States' || datum.STATE == state_filter"
    },
    {
      "aggregate": [{ "op": "count", "as": "FireCount" }],
      "groupby": ["FireCategory"]
    }
  ],
  "mark": {
    "type": "arc",
    "innerRadius": 0,
    "outerRadius": 150
  },
  "encoding": {
    "theta": {
      "field": "FireCount",
      "type": "quantitative",
      "title": "Number of Fire Incidents"
    },
    "color": {
      "field": "FireCategory",
      "type": "nominal",
      "title": "Fire Type",
      "scale": {
        "domain": ["Planned", "Unplanned"],
        "range": ["#0072B2", "#E69F00"]
      }
    },
    "tooltip": [
      { "field": "FireCategory", "type": "nominal", "title": "Fire Type" },
      {
        "field": "FireCount",
        "type": "quantitative",
        "title": "Number of Incidents",
        "format": ","
      }
    ]
  }
}
