{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "title": {
    "text": "Australian Temperature Anomaly (1910-2021)",
    "subtitle": "Temperature deviation from long-term average (째C)",
    "fontSize": 16,
    "subtitleFontSize": 12
  },
  "data": {
    "url": "data/20210908_cli_001_graph-forplot.csv"
  },
  "transform": [
    {
      "filter": "datum.Temperature != null && datum.Temperature != 'NaN'"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "line",
        "strokeWidth": 2
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "quantitative",
          "title": "Year",
          "scale": {
            "domain": [1910,2021]
          },
          "axis":{
            "format": "d",
            "grid": false
          }
        },
        "y": {
          "field": "Temperature",
          "type": "quantitative",
          "title": "Temperature Anomaly (째C)",
          "scale": {
            "domain": [-1.5, 1.5]
          },
          "axis": {
            "grid": false
          }
        },
        "color": {
          "value": "#CC79A7"
        },
        "tooltip": [
          {
            "field": "Year",
            "type": "ordinal",
            "title": "Year"
          },
          {
            "field": "Temperature",
            "type": "quantitative",
            "format": ".2f",
            "title": "Temperature Anomaly (째C)"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "rule",
        "strokeDash": [3, 3],
        "color": "black",
        "opacity": 0.7
      },
      "encoding": {
        "y": {
          "datum": 0
        }
      }
    },
    {
      "transform": [
        {
          "filter": "datum['11-year mean'] != null && datum['11-year mean'] != 'NaN'"
        }
      ],
      "mark": {
        "type": "line",
        "strokeWidth": 3,
        "color": "#56B4E9",
        "opacity": 0.8
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "quantitative",
          "title": "Year",
          "scale": {
            "domain": [1910,2021]
          },
          "axis":{
            "format": "d"
          }
        },
        "y": {
          "field": "11-year mean",
          "type": "quantitative"
        },
        "tooltip": [
          {
            "field": "Year",
            "type": "ordinal",
            "title": "Year"
          },
          {
            "field": "11-year mean",
            "type": "quantitative",
            "format": ".2f",
            "title": "11-year Moving Average (째C)"
          }
        ]
      }
    }
  ]
}